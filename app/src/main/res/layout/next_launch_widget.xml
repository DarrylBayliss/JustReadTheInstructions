<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.JustReadTheInstructions.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:theme="@style/Theme.App.SplashScreen.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:theme="@style/Theme.App.SplashScreen.AppWidgetContainer">

        <TextView
            android:id="@+id/next_launch_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Next Launch:"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/next_launch_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Space X Launch"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.App.SplashScreen.AppWidgetContainer">

        <ImageView
            android:id="@+id/next_launch_emblem_imageview"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

</LinearLayout>